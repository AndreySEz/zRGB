<Window x:Class="RGB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RGB"
        mc:Ignorable="d"
        Title="Цвета" Height="300" Width="400" Background="White">
    <Viewbox>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="11*"/>
                <ColumnDefinition Width="13*"/>
            </Grid.ColumnDefinitions>
            <ListBox HorizontalAlignment="Left" FontSize="14" Height="279" VerticalAlignment="Top" Width="180" Margin="10,-20,0,-9" Name="list" SelectionChanged="list_SelectionChanged"/>
            <Label Content="Цвет" Grid.Column="1" Margin="42,124,158,76" FontSize="24" Name="color"/>
            <Label Content="Название цвета в RGB" RenderTransformOrigin="4.767,1.918" Grid.Column="1" Margin="42,27,28,43" FontSize="24"/>
        </Grid>
    </Viewbox>
</Window>
